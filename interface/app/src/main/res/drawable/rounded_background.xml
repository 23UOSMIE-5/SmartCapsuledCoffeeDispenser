<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- 버튼의 배경색 -->
    <solid android:color="@color/white" />

    <!-- 버튼의 테두리 색 및 두께 -->
    <stroke
        android:color="#4CAF50"
        android:width="2dp" />

    <!-- 버튼의 모서리를 둥글게 만듭니다. -->
    <corners android:radius="12dp" />

    <!-- 버튼의 패딩 -->
    <padding
        android:left="16dp"
        android:top="16dp"
        android:right="16dp"
        android:bottom="16dp" />
</shape>
